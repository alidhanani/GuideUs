<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szabist.fyp.guideus.BusinessModifyPromoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:layout_margin="8dp"
                android:editable="false"
                android:id="@+id/busStoreModID"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busStoreModName"
                android:layout_margin="8dp"
                android:hint="Enter Store Name"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busStoreModType"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:entries="@array/area_arrays"
                android:prompt="@string/area_prompt"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busStoreModEmail"
                android:layout_margin="8dp"
                android:hint="Enter Store Email"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busStoreModContact"
                android:layout_margin="8dp"
                android:hint="Enter Store Contact"
                />

            <EditText
                android:id="@+id/busStoreModDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_margin="8dp"
                android:hint="Enter Store Description"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnbusStoreModSubPromo"
                android:layout_margin="8dp"
                android:text="Delete Promo"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnbusStoreModAddPromo"
                android:layout_margin="8dp"
                android:text="Add Promo"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
